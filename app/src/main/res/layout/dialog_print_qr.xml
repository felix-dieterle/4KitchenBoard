<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/panel_padding">

    <!-- Paper format row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/print_paper_format"
            android:textSize="@dimen/body_text_size"
            android:textColor="@color/text_primary"/>

        <Spinner
            android:id="@+id/spinner_paper_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Labels toggle -->
    <CheckBox
        android:id="@+id/cb_show_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/print_show_labels"
        android:checked="true"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:textSize="@dimen/body_text_size"
        android:textColor="@color/text_primary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <!-- Select-all row -->
    <CheckBox
        android:id="@+id/cb_select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/print_select_all"
        android:checked="true"
        android:layout_marginBottom="@dimen/spacing_small"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:textColor="@color/text_primary"/>

    <!-- Item list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_print_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
